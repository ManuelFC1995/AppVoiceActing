<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.appvoiceacting">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <application
        android:name=".View.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppVoiceActing.NoActionBar">
        <activity
            android:name=".View.SearchActivity"
            android:label="@string/title_activity_search"
            android:theme="@style/Theme.AppVoiceActing.NoActionBar.NoActionBar"></activity>
        <activity
            android:name=".View.InfoActivity"
            android:label="@string/title_activity_info"
            android:theme="@style/Theme.AppVoiceActing.NoActionBar.NoActionBar" />
        <activity
            android:name=".View.Form_Activity"
            android:label="@string/title_activity_form_"
            android:theme="@style/Theme.AppVoiceActing.NoActionBar.NoActionBar" />
        <activity
            android:name=".View.ListActivity"
            android:label="@string/title_activity_lista"
            android:theme="@style/Theme.AppVoiceActing.NoActionBar" />
        <activity android:name=".View.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>