<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AppVoiceActing" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#3E4893</item>
        <item name="colorPrimaryVariant">@color/Azure</item>
        <item name="colorOnPrimary">@color/WhiteSmoke</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/DarkBlue</item>
        <item name="colorSecondaryVariant">@color/Blue</item>
        <item name="colorOnSecondary">@color/Black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.AppVoiceActing.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="CodeFont" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/WhiteSmoke</item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="MyStyle">
        <item name="android:textSize">30sp</item>

        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/DarkBlue</item>
        <item name="android:shadowColor">@color/design_default_color_primary_dark</item>


    </style>

    <style name="Theme.AppVoiceActing.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.AppVoiceActing.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.AppVoiceActing.NoActionBar.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.AppVoiceActing.NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.AppVoiceActing.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>